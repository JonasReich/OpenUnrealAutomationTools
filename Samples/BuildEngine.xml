<?xml version='1.0' ?>
<BuildGraph xmlns="http://www.epicgames.com/BuildGraph" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.epicgames.com/BuildGraph ../Schema.xsd" >

	<!-- 
		I use a bunch of built in variables like $(Change), $(HostPlatform), these are defined in BuildGraph.cs.
		See: (https://github.com/EpicGames/UnrealEngine/blob/release/Engine/Source/Programs/AutomationTool/BuildGraph/BuildGraph.cs#L117) 
	-->

	<Option Name="ChangeNumber" DefaultValue="$(Change)" Description ="The change number we are updating to"/>
	<Option Name="Stream" DefaultValue="$(Branch)" Description ="The stream this engine build is on"/>
	
	<Option Name="BuildConfig" Restrict="Debug|DebugGame|Development|Test|Shipping" DefaultValue="Development" Description="Build Configuration to Use"/>

	<Option Name="EnginePlatform" DefaultValue="$(HostPlatform)" Description="Engine Platform to Compile for"/>
	
	<!-- The arguments to pass when building -->
	<Property Name="BuildArguments" Value="-NoUBTMakefiles -NoXGE -NoHotReload"/>

	<Agent Name="Target Editor" Type="Any">

		<Node Name="Compile UHT" Produces="#UHT">
			
			<!-- Update the build number of our engine -->
			<SetVersion Change="$(ChangeNumber)" Branch="$(Stream)" Licensee="true" If="'$(ChangeNumber)' != '' AND '$(Stream)' != ''"/>

			<!-- Compile UnrealHeaderTool -->
			<Log Message="Compiling Unreal Header Tool for Development"/>
			<Compile Target="UnrealHeaderTool" Platform="$(EnginePlatform)" Arguments="$(BuildArguments)" Configuration="Development" Tag="#UHTFiles"/>	
		</Node>
		
		
		<!-- Compile the Engine as a whole -->
		<Node Name="Compile UE4Editor" Requires="#UHT" Produces="#UE4Editor">

			<!-- Compile Editor in user defined config -->
			<Log Message="Compiling Editor in $(BuildConfig) for $(EnginePlatform)"/>

			<Compile Target="UE4Editor" Platform="$(EnginePlatform)" Arguments="$(BuildArguments)" Configuration="$(BuildConfig)" Tag="#EditorFiles"/>
		</Node>
		
				<!-- Compile the additional components required to produce a standalone build -->
		<Node Name="Compile Editor for Standalone" Requires="#UHT" Produces="#EditorForStandalone" After="#UE4Editor">
					
			<!-- Compile Shader Compile Worker -->
			<Compile Target="ShaderCompileWorker" Platform="$(EnginePlatform)" Arguments="$(BuildArguments)" Configuration="Development" Tag="#ShaderCompilerWorkerFiles;#UHTFiles"/>
							
			<!-- Compile UnrealPak -->
			<Compile Target="UnrealPak" Platform="$(EnginePlatform)" Arguments="$(BuildArguments)" Configuration="Development" Tag="#UnrealPakFiles;#UHTFiles"/>

		</Node>
		
	</Agent>
	
</BuildGraph>
